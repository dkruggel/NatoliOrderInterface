                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="SUBMITTED" Style="{StaticResource ToggleButtonLegend}">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="DodgerBlue" Offset="-0.05"/>
                                                    <GradientStop Color="DodgerBlue" Offset="0.3"/>
                                                    <GradientStop Color="DodgerBlue" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="SENT BACK TO DRAFTER FOR FIXES" Style="{StaticResource ToggleButtonLegend}">
