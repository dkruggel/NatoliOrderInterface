                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="Orange" Offset="-0.05"/>
                                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag=" [fontstyle] TABLET AND TOOL PROJECT (TABLET MODULE) " Style="{StaticResource ToggleButtonLegend}" FontStyle="Oblique">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="Transparent" Offset="-0.05"/>
                                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="TABLET AND TOOL PROJECT (TOOL MODULE)" Style="{StaticResource ToggleButtonLegend}">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="Yellow" Offset="-0.05"/>
                                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="MULTI TIP SKETCH (TOOL MODULE)" Style="{StaticResource ToggleButtonLegend}">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="Gray" Offset="-0.05"/>
                                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="CHECKED/COMPLETED/READY TO FOLLOW UP" Style="{StaticResource ToggleButtonLegend}">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="GreenYellow" Offset="-0.05"/>
                                                    <GradientStop Color="GreenYellow" Offset="0.3"/>
                                                    <GradientStop Color="GreenYellow" Offset="0.8"/>
                                                    <GradientStop Color="GreenYellow" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                </ListBox>
                                <Border Grid.Row="3">
