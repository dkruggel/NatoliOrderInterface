                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ListBoxItem">
                                                        <ContentPresenter/>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBoxItem >
                                        <ToggleButton Tag="NOT STARTED" Style="{StaticResource ToggleButtonLegend}">
                                            <ToggleButton.Background>
                                                <LinearGradientBrush Opacity=".7">
                                                    <GradientStop Color="Transparent" Offset="-0.05"/>
                                                    <GradientStop Color="Transparent" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="PRIORITY" Style="{StaticResource ToggleButtonLegend}">
