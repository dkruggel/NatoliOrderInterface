                                                <LinearGradientBrush Opacity="0.7">
                                                    <GradientStop Color="DodgerBlue" Offset="-0.05"/>
                                                    <GradientStop Color="DodgerBlue" Offset="0.3"/>
                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Transparent" Offset="1.05"/>
