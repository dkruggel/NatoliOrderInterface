                                                    <GradientStop Color="Transparent" Offset="0.8"/>
                                                    <GradientStop Color="Red" Offset="1.05"/>
                                                </LinearGradientBrush>
                                            </ToggleButton.Background>
                                        </ToggleButton>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ToggleButton Tag="INACTIVE" Style="{StaticResource ToggleButtonLegend}">
