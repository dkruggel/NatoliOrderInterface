<Window x:Class="NatoliOrderInterface.LegendWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatoliOrderInterface"
        mc:Ignorable="d"
        Title="Legend" Height="800" Width="1400" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}" WindowStartupLocation="CenterScreen">
