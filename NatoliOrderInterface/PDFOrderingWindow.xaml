<Window x:Class="NatoliOrderInterface.PDFOrderingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatoliOrderInterface"
        mc:Ignorable="d"
        Title="PDFOrderingWindow" Height="550" Width="800" WindowStartupLocation="CenterOwner" Topmost="True" Background="{StaticResource BackgroundBrush}">
    <DockPanel LastChildFill="False">
        <TextBlock DockPanel.Dock="Top" Text="Specify .pdf Order" Style="{StaticResource BoldTextBlock}" FontSize="24" HorizontalAlignment="Center"/>
        <Border DockPanel.Dock="Top" Margin="0,20,0,20" BorderBrush="{StaticResource Focused.Border}" BorderThickness="0" MaxHeight="400">
            <ListBox x:Name="ListBox1" Margin="20,0" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Border>
        <Grid HorizontalAlignment="Right" MinWidth="180" DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="OK" Grid.Column="0" Style="{StaticResource Button}" Content="OK" VerticalAlignment="Center" Click="OK_Click"/>
            <Button x:Name="Cancel" Grid.Column="1" Style="{StaticResource Button}" Content="Cancel" VerticalAlignment="Center" Click="Cancel_Click"/>
        </Grid>
    </DockPanel>
</Window>
