<Window x:Class="NatoliOrderInterface.EmailBodyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatoliOrderInterface"
        mc:Ignorable="d"
        Title="EmailBodyWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <RichTextBox x:Name="EmailBodyTextBlock" Margin="30,30,30,75"/>
        <Button x:Name="SendButton" Style="{StaticResource Button}" Content="Send" Margin="0,0,50,25" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="SendButton_Click"/>

    </Grid>
</Window>
