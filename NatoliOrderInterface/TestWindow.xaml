<Window x:Class="NatoliOrderInterface.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatoliOrderInterface"
        mc:Ignorable="d"
        Title="TestWindow" Height="1020" Width="1875" WindowStartupLocation="CenterScreen">
    <Border>
        <WrapPanel Grid.IsSharedSizeScope="True" Orientation="Vertical">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="WrapWidth" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource OrdersEnteredModule}" x:Name="OrdersEnteredModule"/>
            </Grid>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="WrapWidth" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Style="{StaticResource OrdersInEngineeringModule}" x:Name="OrdersInEngineeringModule"/>
            </Grid>
        </WrapPanel>
    </Border>
</Window>
