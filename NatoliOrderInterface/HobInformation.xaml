                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Width/Diameter" Grid.Column="0" Margin="4,4,10,4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBox x:Name="Width" Tag="Die" Grid.Column="1" Margin="4"/>
                    <TextBox x:Name="WidthMetric" Tag="Die" Grid.Column="2" Margin="4"/>
                </Grid>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
