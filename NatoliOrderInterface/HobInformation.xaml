        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NatoliOrderInterface"
        mc:Ignorable="d"
        Title="Hob and Die Information" Height="550" Width="1075">
    <Window.Resources>
        <local:BorderBrushConverter x:Key="BorderBrushConverter"/>
    </Window.Resources>
    <Grid Margin="15">
        <DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Height="40">
                <Button x:Name="AddDieButton" Content="Add Die" Margin="15,5,5,5" Width="120" Style="{StaticResource Button}" Click="AddDie_Click"/>
                <Button x:Name="AddHobButton" Content="Add Hob" Margin="285,5,5,5" Width="120" Style="{StaticResource Button}" Click="AddHob_Click"/>
