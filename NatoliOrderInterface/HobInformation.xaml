                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="End Radius" Grid.Column="0" Margin="4,4,10,4" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <TextBox x:Name="EndRadius" Tag="Die" Grid.Column="1" Margin="4"/>
                    <TextBox x:Name="EndRadiusMetric" Tag="Die" Grid.Column="2" Margin="4"/>
                </Grid>
                <Grid DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
